  <div class="car-overview mb-2">
    <h1 class="title" style="margin-top: 40px; margin-bottom: 40px; font-size: 60px;">
      <%= @car.year %> <%= @car.brand %> <%= @car.model %>
    </h1>
  </div>
  <div class="img-cont mb-4" style="background-image: url('<%= cl_image_path(@car.photo.key) %>');">
   <!--  <a href="#jump">linked text</a> -->
    <a href="#jump" style="font-size: 85px; margin-top: 739px; color: #065224"><i class="fas fa-angle-double-down"></i></a>
  </div>
<div class="px-5 pt-5">
  <div class="w-75 mr-auto ml-auto">


    <div class="price-rating mb-2" style="display: flex; justify-content: space-between;" >
      <h2 class="price" id='jump'style="font-size: 20px; color: #064125; margin-top: 10px; font-weight: bold">Price per day: <%= (@car.price_day).to_i %>â‚¬</h2>
      <%= link_to "Book now", new_car_booking_path(@car), class:"btnprimary" %>
      <h2 class="rating" style="font-size: 20px; color: #064125; margin-top: 10px; font-weight: bold"> Rating: <i class="far fa-star"></i><i class="far fa-star"></i><i class="far fa-star"></i><i class="far fa-star"></i><i class="far fa-star"></i> </h2>
    </div>
    <br>
    <div style="display: flex;">
      <p><%= @car.availability %></p>
      <p>Currently available</p>
    </div>


    <div class="car_description" >
      <p style="text-align: justify; margin-bottom: 80px"><%= @car.description %></p>
    </div>

    <div style="text-align:  left">
      <h3>Recent Reviews</h3>
      <% @car.bookings.each do |booking| %>
        <% if booking.review %>
          <h6><%= booking.user.first_name %> <%= booking.user.last_name %> - <%= booking.review.comment %> Rating: <%= booking.review.rating %></h6>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
