<div class='container col-4'>
  <h1>Add your classic car</h1>
  <%= simple_form_for @car do |f| %>
    <%= f.input :brand %>
    <%= f.input :model %>
    <%= f.input :year %>
    <%= f.input :price_day %>
    <%= f.input :category, collection: Car::CATEGORIES   %>
    <%= f.input :description, as: :text %>
    <%= f.input :photo, as: :file %>
    <%= f.button :submit %>
  <% end %>
</div>
